
<form id='updateExercise' action='/exercise/id' method='post'> 
<div class="form-group">
<label class="mr-sm-2" for="category_id">Category:</label>
  <select class="custom-select mb-2 mr-sm-2 mb-sm-0" name="category_id" id="cid">
    {{#each exercise}}
    <option selected value="{{category_id}}">No Change</option>
    {{/each}}
    {{#each category}}
    <option value="{{cid}}">{{cname}}</option>
    {{/each}}
  </select>
</div>
{{#each exercise}}
<div class="form-group">
  <label for="ename" class="col-form-label">Exercise Name:</label>
  <input type="text" class="form-control"name="ename" id="ename" value="{{ename}}">
</div>
<div class="form-group">
  <label for="description" class="col-form-label">Exercise Description:</label>
  <textarea class="form-control" id="description" name="description">{{description}}</textarea>
</div>
</form>
<button type="submit" value="Submit" onclick="updateExercise({{eid}})"class="btn btn-primary" data-id="{{eid}}">Update</button>
{{/each}}