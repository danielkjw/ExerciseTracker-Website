<div class="row">
<div class="col-xs-4">

<table class="table" id="exercisetable">
    <thead>
        <tr>
        <th>First Name</th> 
        <th>Last Name</th> 
        <th>Gender</th>
        <th>Age</th>
        <th>Favorite Exercise</th>
        <th>Exercise Category</th>
        </tr>
    </thead> 
    <tbody> 
        {{#each r2}} 
        <tr>
            <td>{{fname}}</td> 
            <td>{{lname}}</td> 
            <td>{{gender}}</td> 
            <td>{{age}}</td>
            <td>{{exercise}}</td>
            <td>{{category}}</td>
            <td><button onclick="deletePerson({{id}})">Delete</button></td>
            <td><a href="/people/{{id}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
    </tbody> 
</table>
</div>
</div>